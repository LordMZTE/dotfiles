#!/usr/bin/env -S ros -Q --
#|-*- mode:lisp -*-|#
(progn
  (ros:ensure-asdf)
  (ql:quickload '(:swank :mondo) :silent t))

(defpackage :swank-mondo-repl
  (:use :cl))
(in-package :swank-mondo-repl)

(defun main (&rest argv)
  (declare (ignorable argv))
  (let ((port (swank:create-server :dont-close t)))
    (mondo:main nil :port port)))
