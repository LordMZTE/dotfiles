set editorcmd neovim-qt
set theme midnight
set smoothscroll true

<! local searchurls = {
    github = "https://github.com/search?type=repositories&q=",
    wiki = "https://en.wikipedia.org/w/index.php?search=",
    dewiki = "https://de.wikipedia.org/w/index.php?search=",
} !>

<! for k, v in pairs(searchurls) do !>
set searchurls.<% k %> <% v %>
<! end !>

" Filterable hint mode
set hintfiltermode vimperator-reflow
set hintnames numeric
